<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">
    
    <LinearLayout android:id="@+id/word_top_panel"
        android:orientation="horizontal" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
    			
    	<Button android:id="@+id/word_previous"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="0.4"
        	android:layout_gravity="left"
		    android:background="@drawable/selector_word_button"
        	android:drawableLeft="@drawable/left_arrow_64"
		    android:textSize="14sp"
        	android:textColor="#000000"
		    android:drawablePadding="-10sp"
        	android:text="@string/word_previous" />
        			
    	<Button android:id="@+id/bookmark"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
		    android:background="@drawable/bookmark_on" />
    	
    	<Button android:id="@+id/word_next"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_weight="0.4"
			android:layout_gravity="right"
			android:background="@drawable/selector_word_button"
        	android:drawableRight="@drawable/right_arrow_64"
        	android:textSize="14sp"
        	android:textColor="#000000"
			android:drawablePadding="-10sp"
        	android:text="@string/word_next" />
    			
    </LinearLayout>
    
    <TextView android:id="@+id/word_cannot_open"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_weight="0.9"
    	android:layout_margin="10px"
    	android:textSize="25sp"
    	android:textColor="#000000"
    	android:gravity="center_horizontal" />
    
    <WebView android:id="@+id/word_text"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_margin="5px"
    	android:layout_weight="0.9"
    	android:visibility="gone" />
    		
    <Button android:id="@+id/word_goto_main"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/goto_menu"
    	android:layout_margin="5px"
    	android:layout_marginTop="15px" />
    
</LinearLayout>
